{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "CMake: configure",
        "type": "shell",
        "command": "cmake",
        "args": [
          "-B",
          "build",
          "-S",
          "."
        ],
        "options": {
          "cwd": "${workspaceFolder}"
        },
        "group": "build",
        "detail": "Configure CMake project"
      },
      {
        "label": "CMake: build",
        "type": "shell",
        "command": "cmake",
        "args": [
          "--build",
          "build",
          "--config",
          "Debug"
        ],
        "options": {
          "cwd": "${workspaceFolder}"
        },
        "group": "build",
        "detail": "Build CMake project"
      }
    ]
  }