{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "cmake: configure",
      "type": "shell",
      "command": "cmake",
      "args": [
        "--preset",
        "${input:cmakePreset}",
        "-B",
        "${workspaceFolder}/build"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "cmake: build",
      "type": "shell",
      "command": "cmake",
      "args": [
        "--build",
        "${workspaceFolder}/build",
        "--config",
        "${input:buildType}"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": "build"
    },
    {
      "label": "vcpkg: initialize",
      "type": "shell",
      "command": "git clone git@github.com:microsoft/vcpkg.git && ${workspaceFolder}/vcpkg/bootstrap-vcpkg.bat",
      "options": {
        "shell": {
          "executable": "cmd.exe",
          "args": ["/d", "/c"]
        }
      },
      "group": "none",
      "problemMatcher": []
    },
    {
      "label": "vcpkg: install dependencies",
      "type": "shell",
      "command": "${workspaceFolder}/vcpkg/vcpkg",
      "args": [
        "install",
        "--triplet",
        "${input:vcpkgTriplet}"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": "none",
      "problemMatcher": []
    }
  ],
  "inputs": [
    {
      "id": "cmakePreset",
      "type": "pickString",
      "description": "Select CMake Preset:",
      "options": [
        "windows-clang",
        "linux-clang",
        "macos-clang"
      ],
      "default": "windows-clang"
    },
    {
      "id": "buildType",
      "type": "pickString",
      "description": "Select Build Type:",
      "options": [
        "Debug",
        "Release"
      ],
      "default": "Debug"
    }
  ]
}
